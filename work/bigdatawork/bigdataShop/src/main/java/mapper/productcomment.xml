<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.multi.bigdataShop.product.comment">
	<insert id="commentinsert" parameterType="comment">
		insert into pro_comment values(#{prd_no}, #{mem_id}, #{pro_comment}, sysdate)
	</insert>
	<select id="commentlist" resultType="comment" parameterType="String">
		select * from pro_comment
		where prd_no=#{prd_no}
	</select>
	
	<select id="commentresult" resultType="commentresult">
	<!-- <![CDATA[
		select commentrs.* 
		from (select * from comment_result
			  order by count desc) commentrs
		where rownum<=10
	]]> -->
		select * from comment_result
		order by count desc
	</select>
</mapper>